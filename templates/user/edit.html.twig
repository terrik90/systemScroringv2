{% extends 'layout.html.twig' %}

{% block title %}Редактирование пользователя{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-light">
                        <li class="breadcrumb-item"><a href="{{ path('app_user_index') }}">Пользователи</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Редактирование</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h1 class="h3 mb-0">Редактирование пользователя</h1>
                            <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left mr-2"></i>Назад к списку
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                {{ include('user/_form.html.twig', {'button_label': 'Сохранить'}) }}
                                
                                <div class="mt-4 pt-3 border-top">
                                    <div class="d-flex justify-content-end">
                                        {{ include('user/_delete_form.html.twig') }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
