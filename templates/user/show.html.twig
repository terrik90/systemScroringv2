{% extends 'layout.html.twig' %}

{% block title %}Просмотр пользователя{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">Информация о пользователе</h1>
            <div class="btn-group">
                <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Назад к списку
                </a>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Редактировать
                </a>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="table-responsive">
                            <table class="table table-bordered mb-0">
                                <tbody>
                                    <tr>
                                        <th class="bg-light w-25">ID</th>
                                        <td>{{ user.id }}</td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Email</th>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Имя</th>
                                        <td>{{ user.firstname }}</td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Фамилия</th>
                                        <td>{{ user.lastname }}</td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Телефон</th>
                                        <td>{{ user.phone }}</td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Образование</th>
                                        <td>{{ user.education }}</td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Согласие</th>
                                        <td>
                                            {% if user.consent %}
                                                <span class="badge badge-success">Да</span>
                                            {% else %}
                                                <span class="badge badge-danger">Нет</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Баллы</th>
                                        <td>
                                            <span class="badge badge-primary">{{ user.score }}</span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
