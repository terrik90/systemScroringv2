{% extends 'layout.html.twig' %}

{% block title %}Список пользователей{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">Список пользователей</h1>
            <div>
                <a href="{{ path('app_user_new') }}" class="btn btn-primary mr-2">
                    <i class="fas fa-plus"></i> Добавить пользователя
                </a>
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">
                    <i class="fas fa-sign-out-alt"></i> Выход
                </a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th class="border-top-0">ID</th>
                                <th class="border-top-0">Email</th>
                                <th class="border-top-0">Имя</th>
                                <th class="border-top-0">Фамилия</th>
                                <th class="border-top-0">Телефон</th>
                                <th class="border-top-0">Образование</th>
                                <th class="border-top-0">Согласие</th>
                                <th class="border-top-0">Баллы</th>
                                <th class="border-top-0 text-center">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.firstname }}</td>
                                <td>{{ user.lastname }}</td>
                                <td>{{ user.phone }}</td>
                                <td>{{ user.education }}</td>
                                <td>
                                    {% if user.consent %}
                                        <span class="badge badge-success">Да</span>
                                    {% else %}
                                        <span class="badge badge-danger">Нет</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge badge-primary">{{ user.score }}</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info" title="Просмотр">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-3 d-block"></i>
                                    Записей не найдено
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
