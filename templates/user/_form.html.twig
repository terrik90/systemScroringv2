{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
    <div class="row">
        {% for field in form %}
            <div class="col-12 mb-4">
                <div class="form-group">
                    {{ form_label(field, null, {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                    {{ form_widget(field, {'attr': {
                        'class': 'form-control' ~ (field.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': field.vars.label
                    }}) }}
                    {% if field.vars.errors|length > 0 %}
                        <div class="invalid-feedback">
                            {{ form_errors(field) }}
                        </div>
                    {% endif %}
                    {% if field.vars.help %}
                        <small class="form-text text-muted mt-1">
                            {{ field.vars.help }}
                        </small>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-primary btn-lg px-4">
            <i class="fas fa-save mr-2"></i>{{ button_label|default('Сохранить') }}
        </button>
    </div>
{{ form_end(form) }}
