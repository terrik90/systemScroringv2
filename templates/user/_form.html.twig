{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
    <div class="row">
        {% for field in form %}
            <div class="col-12 mb-4">
                <div class="form-group">
                    {{ form_label(field, null, {
                        'label_attr': {
                            'class': 'form-label fw-bold mb-2'
                        }
                    }) }}
                    {{ form_widget(field, {
                        'attr': {
                            'class': 'form-control' ~ (field.vars.errors|length > 0 ? ' is-invalid' : ''),
                            'placeholder': 'Введите ' ~ field.vars.label|lower
                        }
                    }) }}
                    {% if field.vars.errors|length > 0 %}
                        <div class="invalid-feedback">
                            {{ form_errors(field) }}
                        </div>
                    {% endif %}
                    {% if field.vars.help %}
                        <small class="form-text text-muted mt-2">
                            {{ field.vars.help }}
                        </small>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Вернуться к списку
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>{{ button_label|default('Сохранить изменения') }}
        </button>
    </div>
{{ form_end(form) }}
